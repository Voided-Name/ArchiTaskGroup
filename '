    private void btnLoginActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_btnLoginActionPerformed
        PreparedStatement pst;
        ResultSet rs;
        con = Commands.Connect(con);

        String username = txtUsernameLog.getText();
        char[] passwordBuffer = txtPasswordLog.getPassword();

        if (username.isBlank() || passwordBuffer.length == 0) {
            if (username.isBlank()) {
                Commands.simpleHighlightComponent(txtUsernameLog);
            } else if (passwordBuffer.length == 0) {
                Commands.simpleHighlightComponent(txtPasswordLog);
            }
            txtErrorLogin.setText("Empty Field/s");
        } else {
            if (Commands.existingUser(username)) {
                String query = "SELECT password FROM registration WHERE username = ?";

                try {
                    pst = con.prepareStatement(query);
                    pst.setString(1, username);
                    rs = pst.executeQuery();
                    rs.next();
                } catch (SQLException err) {
                    err.printStackTrace();
                }

                if (BCrypt.checkpw(rs.getString("password"), new String(passwordBuffer)){

                }
            } else {
                Commands.simpleHighlightComponent(txtUsernameLog);
                Commands.simpleHighlightComponent(txtPasswordLog);
                txtErrorLogin.setText("Invalid Username or Password!");
            }
        }

        String query = "";

        try {
            con.close();
        } catch (SQLException err) {
            err.printStackTrace();
        }
    }// GEN-LAST:event_btnLoginActionPerformed

